mixin product(product)
    div.product--box
        h2.product--title--item= product.title
        h4.product--price= `Price - $ ${product.price.toString().slice(0,5)}`
        a(href=`/products/${product.id}`) details
include ../includes/header.pug 
body    
    h1= title
    hr
    h1= product.title
    +product(product)